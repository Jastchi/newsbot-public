{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/newsbot/main.py",
            "args": [
                "run",
                "--config",
                "${command:pickArgs}",
                "--force"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Analyze",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/newsbot/main.py",
            "args": [
                "analyze",
                "--config",
                "${command:pickArgs}",
                "--test"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Run Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/web/manage.py",
            "args": ["runserver"],
            "django": true,
            "cwd": "${workspaceFolder}/src/web",
            "console": "integratedTerminal"
        }
    ]
}